server:
  host: "0.0.0.0"
  port: 8080
  max_concurrent_requests: 100

gemini:
  model: "gemini-1.5-flash-latest"
  api_timeout: 300
  all_files_mode: "auto"  # "always", "never", "auto"
  auto_all_files_thresholds:
    max_files: 200
    max_size_mb: 10
  base_prompt: |
    You are a code analysis assistant. Please analyze the provided repository 
    and answer questions about the codebase accurately and concisely.
    
    When analyzing code, consider:
    - Overall architecture and design patterns
    - Code structure and organization
    - Key functionality and features
    - Dependencies and integrations
    - Best practices and potential improvements
    
    Provide detailed, accurate responses based on the actual codebase.

repository:
  storage_path: "./repositories"
  clone_method: "https"  # https or ssh
  clone_depth: 1
  update_threshold_hours: 24
  access_timeout_hours: 72
  max_concurrent_operations: 10
  default_branch: "main"  # fallback when no branch specified

cleanup:
  enabled: true
  interval_hours: 24
  retention_days: 7
  max_storage_gb: 50
  cleanup_on_startup: false

logging:
  level: "INFO"  # DEBUG, INFO, WARN, ERROR
  file: "./logs/service.log"
  max_size_mb: 100
  backup_count: 5
  console_output: true
  
security:
  request_timeout: 300  # seconds
  max_request_size: "10mb"
  rate_limit:
    enabled: false
    max_requests: 100
    window_minutes: 15
    
monitoring:
  health_check_interval: 30  # seconds
  metrics_enabled: true
  performance_logging: true 