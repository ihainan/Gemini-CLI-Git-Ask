{
  "name": "gemini-cli-git-ask-service",
  "version": "1.0.0",
  "description": "Git Repository Code Q&A Service using Gemini CLI",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:unit:watch": "jest tests/unit --watch",
    "test:integration:watch": "jest tests/integration --watch",
    "test:real-integration": "jest --config=jest.config.real-integration.js",
    "test:real-integration:watch": "jest --config=jest.config.real-integration.js --watch",
    "test:real-integration:setup": "tests/real-integration/run-tests.sh",
    "test:silent": "jest --silent",
    "test:verbose": "jest --verbose",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "docker:build": "docker build -t gemini-git-ask-service .",
    "docker:run": "docker run -p 8080:8080 -v ~/.gemini:/home/appuser/.gemini:ro gemini-git-ask-service",
    "docker:compose:up": "cd ../docker && docker-compose up -d",
    "docker:compose:down": "cd ../docker && docker-compose down",
    "docker:compose:logs": "cd ../docker && docker-compose logs -f"
  },
  "keywords": [
    "gemini",
    "git",
    "code-analysis",
    "ai",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "node-cron": "^3.0.3",
    "proper-lockfile": "^4.1.2",
    "simple-git": "^3.25.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.0",
    "@types/node-cron": "^3.0.11",
    "@types/proper-lockfile": "^4.1.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^30.0.2",
    "nodemon": "^3.1.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts,js,json",
    "ignore": ["repositories", "dist", "node_modules", "tests", "coverage"],
    "exec": "ts-node src/index.ts"
  }
}
